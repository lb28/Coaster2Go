<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.uulm.dbis.coaster2go"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:theme="@style/AppTheme"
        android:label="Coaster2Go">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MessageActivity"
            android:label="Message Board"/>
        <activity android:name=".TimsTestActivity" />
        <activity android:name=".TestDataActivity"
            android:theme="@style/Theme.AppCompat"></activity>
    </application>

</manifest>