<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="3"
    app:rowCount="2"
    >

    <ImageView
        android:id="@+id/parkList_image"
        app:layout_column="0"
        app:layout_row="0"
        app:layout_rowSpan="2"
        app:layout_gravity="fill"
        app:layout_rowWeight="2"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_local_activity_black_24dp"
        android:contentDescription="@string/park_image" />



    <TextView
        android:id="@+id/parkList_name"
        app:layout_column="1"
        app:layout_row="0"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        android:text="@string/name"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="20sp" />

    <RatingBar
        android:id="@+id/parkList_rating"
        app:layout_column="1"
        app:layout_row="1"
        app:layout_gravity="bottom"
        app:layout_columnWeight="1"
        style="?android:attr/ratingBarStyleIndicator"
        android:numStars="5"
        android:rating="3"
        android:stepSize="0.5"
        android:visibility="visible"
        android:isIndicator="true"/>

    <TextView
        android:id="@+id/parkList_location"
        app:layout_column="2"
        app:layout_row="0"
        android:gravity="end|center"
        android:text="Ort" />

    <TextView
        android:id="@+id/parkList_distance"
        app:layout_column="2"
        app:layout_row="1"
        android:gravity="end|center"
        android:text="Entf." />

</android.support.v7.widget.GridLayout>